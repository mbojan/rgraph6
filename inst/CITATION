year <- sub("-.*", "", meta$Date)

note <- sprintf("R package version: %s", meta$Version)

bibentry( 
  bibtype="Manual",
  title="{rgraph6}: Representing Undirected Graphs as graph6 Strings",
  author= person("Michal", "Bojanowski"),
  year = year,
  note = note,
  url = "https://github.com/mbojan/rgraph6",
  mheader="To cite package 'rgraph6' in publications use:",
  mfooter= paste("We have invested some time and effort in creating this package,",
                "please cite it when using it for data analysis or other tasks.", sep = " ")
)
